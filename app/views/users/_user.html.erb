<li class="overflow-auto py-3 border-bottom">
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Delete", user_path(user), method: :delete,
                  data: { confirm: "are you sure?" } %>
  <% end %>
</li>